<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_2"
        >

        <ImageView
            android:id="@+id/Iv_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="133dp"
            android:layout_marginLeft="133dp"
            android:layout_marginTop="83dp"
            app:srcCompat="@drawable/ic_launcher_1" />

        <EditText
            android:id="@+id/et_fname"
            android:drawableLeft="@drawable/ic_action_name"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textColor="#111111"
            android:layout_alignParentTop="true"
            android:layout_marginTop="204dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/Iv_user"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="FirstName"/>
        <EditText
            android:id="@+id/et_lname"
            android:drawableLeft="@drawable/ic_action_name"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:textColor="#111111"
            android:layout_alignParentTop="true"
            android:layout_marginTop="204dp"
            android:layout_marginLeft="180dp"
            android:ems="10"
            android:layout_below="@id/Iv_user"
            android:layout_centerVertical="true"
            android:inputType="textPersonName"
            android:hint="LastName" />
        <EditText
            android:id="@+id/et__reg_email"
            android:drawableLeft="@drawable/ic_email"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:textColor="#111111"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:layout_below="@id/et_fname"
            android:layout_centerVertical="true"
            android:inputType="textPersonName"
            android:hint="Email" />

        <EditText
            android:id="@+id/et__reg_phone"
            android:drawableLeft="@drawable/ic_phone"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:textColor="#111111"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:layout_below="@id/et__reg_email"
            android:layout_centerVertical="true"
            android:inputType="textPersonName"
            android:hint="Phone" />

    </RelativeLayout>

</FrameLayout>